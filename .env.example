# =============================================================================
# Zaytri — Environment Configuration
# Copy this file to .env and fill in your actual values.
# Ports are the single source of truth — change them below and everything adapts.
# =============================================================================

# ─── Service Ports (change these if defaults conflict with your system) ──────
BACKEND_PORT=8000
FRONTEND_PORT=3000
REDIS_PORT=6379
POSTGRES_PORT=5432
OLLAMA_PORT=11434

# ─── Database (PostgreSQL) ───────────────────────────────────────────────────
# For local dev: use localhost. For Docker: use "postgres" as hostname.
DATABASE_URL=postgresql+asyncpg://zaytri_user:your_secure_password_here@localhost:5432/zaytri_db
DATABASE_URL_SYNC=postgresql://zaytri_user:your_secure_password_here@localhost:5432/zaytri_db
POSTGRES_USER=zaytri_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=zaytri_db

# ─── Redis ───────────────────────────────────────────────────────────────────
# For local dev: use localhost. For Docker: use "redis" as hostname.
REDIS_URL=redis://localhost:6379/0
FLUSH_REDIS_ON_START=false

# ─── Ollama (Local LLM) ─────────────────────────────────────────────────────
# For local dev: http://localhost:11434  |  For Docker: http://ollama:11434
# Tip: Start Ollama with: OLLAMA_HOST=0.0.0.0:11434 ollama serve
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# ─── Frontend → Backend URL (used by Next.js) ───────────────────────────────
# Must match BACKEND_PORT above.
NEXT_PUBLIC_API_URL=http://localhost:8000

# ─── JWT Authentication ─────────────────────────────────────────────────────
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ─── Cron Schedule Overrides (optional) ──────────────────────────────────────
# SCHEDULER_CRON_HOUR=9
# SCHEDULER_CRON_MINUTE=0
# ENGAGEMENT_DELAY_HOURS=2
# ANALYTICS_CRON_DAY_OF_WEEK=1
# ANALYTICS_CRON_HOUR=8
# TIMEZONE=Asia/Kolkata

# ─── Instagram Graph API ────────────────────────────────────────────────────
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=
INSTAGRAM_APP_SECRET=

# ─── Facebook Graph API ─────────────────────────────────────────────────────
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_PAGE_ID=
FACEBOOK_APP_SECRET=

# ─── Twitter / X API ────────────────────────────────────────────────────────
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# ─── YouTube Data API ───────────────────────────────────────────────────────
YOUTUBE_API_KEY=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=

# ─── OAuth — Social Platforms (Connect flows) ───────────────────────────────
OAUTH_LINKEDIN_CLIENT_ID=
OAUTH_LINKEDIN_CLIENT_SECRET=
OAUTH_REDDIT_CLIENT_ID=
OAUTH_REDDIT_CLIENT_SECRET=
OAUTH_MEDIUM_CLIENT_ID=
OAUTH_MEDIUM_CLIENT_SECRET=

# ─── WhatsApp Business API (content approval flow) ──────────────────────────
# Get these from Meta > WhatsApp Business > API Setup
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=zaytri-whatsapp-verify
WHATSAPP_APPROVAL_PHONE=

# ─── Application ─────────────────────────────────────────────────────────────
APP_NAME=Zaytri
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO
# Must match FRONTEND_PORT and BACKEND_PORT above.
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
