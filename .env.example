# =============================================================================
# Zaytri — Environment Configuration
# =============================================================================

# ─── Service Ports ───────────────────────────────────────────────────────────
BACKEND_PORT=8000
FRONTEND_PORT=3000
REDIS_PORT=6379
POSTGRES_PORT=5432
OLLAMA_PORT=11434

# ─── Database (PostgreSQL) ───────────────────────────────────────────────────
POSTGRES_USER=zaytri_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=zaytri_db
DATABASE_URL=postgresql+asyncpg://zaytri_user:your_secure_password@localhost:5432/zaytri_db
DATABASE_URL_SYNC=postgresql://zaytri_user:your_secure_password@localhost:5432/zaytri_db

# ─── Redis ───────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_secure_password
FLUSH_REDIS_ON_START=false

# ─── Ollama (Local LLM) ─────────────────────────────────────────────────────
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# ─── Frontend / API URL ──────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000

# ─── JWT Authentication ─────────────────────────────────────────────────────
JWT_SECRET_KEY=your-super-secret-jwt-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ─── Default Admin (seed script credentials) ─────────────────────────────────
DEFAULT_ADMIN_EMAIL=
DEFAULT_ADMIN_USERNAME=
DEFAULT_ADMIN_PASSWORD=your_secure_password

# ─── Cron Schedule Overrides (optional) ──────────────────────────────────────
# SCHEDULER_CRON_HOUR=9
# SCHEDULER_CRON_MINUTE=0
# ENGAGEMENT_DELAY_HOURS=2
# ANALYTICS_CRON_DAY_OF_WEEK=1
# ANALYTICS_CRON_HOUR=8
# TIMEZONE=Asia/Kolkata

# ─── Instagram Graph API ────────────────────────────────────────────────────
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=
INSTAGRAM_APP_SECRET=

# ─── Facebook Graph API ─────────────────────────────────────────────────────
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_PAGE_ID=
FACEBOOK_APP_SECRET=

# ─── Twitter / X API ────────────────────────────────────────────────────────
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_secret_key
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=your_token

# ─── YouTube Data API ───────────────────────────────────────────────────────
YOUTUBE_API_KEY=your_api_key
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=your_token

# ─── OAuth — User Login ─────────────────────────────────────────────────────
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_FACEBOOK_APP_ID=
OAUTH_FACEBOOK_APP_SECRET=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_TWITTER_CLIENT_ID=
OAUTH_TWITTER_CLIENT_SECRET=

